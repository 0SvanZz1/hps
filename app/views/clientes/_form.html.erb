<div style="max-width: 500px;">
<%= form_with(model: cliente, local: true) do |form| %>

  <% if cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :cnpj %>
    <%= form.text_field :cnpj, id: :cliente_cnpj, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :razao_social %>
    <%= form.text_field :razao_social, id: :cliente_razao_social, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :fantasia %>
    <%= form.text_field :fantasia, id: :cliente_fantasia, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :estado %>
    <%= form.text_field :estado, id: :cliente_estado, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cep %>
    <%= form.text_field :cep, id: :cliente_cep, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :fone1 %>
    <%= form.text_field :fone1, id: :cliente_fone1, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :fone2 %>
    <%= form.text_field :fone2, id: :cliente_fone2, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, id: :cliente_email, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= form.check_box :ativo, id: :cliente_ativo, class: 'form-check-input' %>
    <%= form.label :ativo, class: 'form-check-label' %>
  </div>

  <div class="form-group">
    <%= form.label :plano_id %>
    <%= form.number_field :plano_id, id: :cliente_plano_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :convenio_id %>
    <%= form.number_field :convenio_id, id: :cliente_convenio_id, class: 'form-control' %>
  </div>

  <div class="actions form-group">
    <%= form.submit %>
  </div>
<% end %>
</div>