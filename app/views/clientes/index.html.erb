<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table>
    <thead>
        <tr>
            <th>Cnpj</th>
            <th>Razao social</th>
            <th>Fantasia</th>
            <th>Estado</th>
            <th>Cep</th>
            <th>Fone1</th>
            <th>Fone2</th>
            <th>Email</th>
            <th>Ativo</th>
            <th>Plano</th>
            <th>Convenio</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @clientes.each do |cliente| %>
        <tr>
            <td> <span>CPNJ:</span><%= cliente.cnpj %></td>
            <td><%= cliente.razao_social %></td>
            <td><%= cliente.fantasia %></td>
            <td><%= cliente.estado %></td>
            <td><%= cliente.cep %></td>
            <td><%= cliente.fone1 %></td>
            <td><%= cliente.fone2 %></td>
            <td><%= cliente.email %></td>
            <td><%= cliente.ativo %></td>
            <td><%= cliente.plano.descricao %></td>
            <td><%= cliente.convenio_id %></td>
            <td><%= link_to 'Show', cliente %></td>
            <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
            <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

