    <div class="section features-6">
      <div class="container">

      <div class="card">
  <h5 class="card-header">Pesquisa de Clientes</h5>
  <div class="card-body">
  <form>
  <div class="row">
  <div class="col-md-6">
      <div class="form-group">
        CNPJ
        <input type="text" class="form-control" id="exampleInputPassword1" >
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        Razão Social
        <input type="text" class="form-control" id="exampleInputPassword1">
      </div>
    </div>

    </div>

    <div class="row">
  <div class="col-md-6">
      <div class="form-group">
        Plano
        <input type="text" class="form-control" id="exampleInputPassword1">
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        Convênio
        <input type="text" class="form-control" id="exampleInputPassword1">
      </div>
    </div>

    </div>
  <button type="submit" class="btn btn-primary">Pesquisar</button>
  <a href="/clientes/new" class="btn btn-success">Novo</a>
</form>
  </div>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th>CNPJ</th>
      <th>Razão</th>
      <th>Fantasia</th>
			<th>Estado</th>
			<th>Ativo</th>
      <th scope="col">Email</th>
      <th scope="col" colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @clientes.each do |cliente| %>
    <tr>
    <th scope="row"><%= cliente.id %></th>
    <td><%= cliente.cnpj %></td>
    <td><%= cliente.razao_social %></td>
    <td><%= cliente.fantasia %></td>
    <td><%= cliente.estado %></td>
    <td><%= cliente.ativo %></td>
    <td><%= cliente.email %></td>
    <td><%= link_to 'Consultar', cliente %></td>
    <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>


      </div>
    </div>
