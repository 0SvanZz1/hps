<p id="notice"><%= notice %></p>

<h1>Vagas</h1>

<table class="table-sm table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Quadra</th>
      <th scope="col">Tipo</th>
      <th scope="col" colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @vagas.each do |vaga| %>
      <tr>
        <th scope="row"><%= vaga.id %></th>
        <td><%= vaga.quadra %></td>
        <td><%= vaga.tipo %></td>
        <td><%= link_to 'Show', vaga %></td>
        <td><%= link_to 'Edit', edit_vaga_path(vaga) %></td>
        <td><%= link_to 'Destroy', vaga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

